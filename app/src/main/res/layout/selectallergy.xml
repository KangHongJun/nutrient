<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="본인이 가지고 있는 알레르기를 선택하세요."
        android:textSize="45px"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal">

        <CheckBox
            android:id="@+id/crustaceans"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/custom_checkbox"
            android:button="@null"
            android:text="갑각류알레르기"
            android:layout_margin="20dp"
            />

        <CheckBox
            android:id="@+id/milk"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/milk_checkbox"
            android:button="@null"
            android:text="유제품알레르기"
            android:layout_margin="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal">

        <CheckBox
            android:id="@+id/peanut"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="대두/땅콩알레르기"
            android:background="@drawable/peanut_checkbox"
            android:button="@null"
            android:layout_margin="20dp"
            />

        <CheckBox
            android:id="@+id/egg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:background="@drawable/egg_checkbox"
            android:button="@null"
            android:text="계란알레르기" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal">

        <CheckBox
            android:id="@+id/fish"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="생선알레르기"
            android:background="@drawable/fish_checkbox"
            android:button="@null"
            android:layout_margin="20dp"
            />

        <CheckBox
            android:id="@+id/flour"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="밀가루알레르기"
            android:background="@drawable/flour_checkbox"
            android:button="@null"
            android:layout_margin="20dp"
            />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/choicebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            android:text="선택완료"
            />

        <Button
            android:id="@+id/initbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="초기화" />

    </LinearLayout>

</LinearLayout>